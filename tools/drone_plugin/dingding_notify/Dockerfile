FROM frolvlad/alpine-glibc

#修改容器时区
ENV TZ=Asia/Shanghai LANG=C.UTF-8

RUN echo -n ''|base64 -d > /etc/localtime && mkdir -p /usr/share/zoneinfo/Asia && ln -s /etc/localtime /usr/share/zoneinfo/Asia/Shanghai && echo -n 'Asia/Shanghai' > /etc/timezone

# 在drone中，默认目录是/drone/src/,想直接调用，加入/bin
ADD ./notify /bin

CMD ["notify"]